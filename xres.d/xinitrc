# Load X ressources
xrdb $HOME/.Xresources

# Load fonts
xset +fp ~/.xres.d/fonts
xset fp rehash

# Set cursor from X to pointer
xsetroot -cursor_name left_ptr &

#Fix java
wmname LG3D

# Urxvt Daemon
urxvtd --quiet --opendisplay --fork

# URxvt clipboard magic
autocutsel -selection clipboard -fork

# Other programs
#urxvtd -q -f -o &
setxkbmap fr
#unclutter

# clean Xorgs files
rm ~/.serverauth*

hsetroot -fill ~/media/images/udylnp.jpg
# start the WM
exec bspwm

