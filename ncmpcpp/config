# Host and music location
mpd_host = "localhost"
mpd_port = "6600"
mpd_music_dir = "/home/seyt/media/music"

# Playlist look
playlist_display_mode = "classic"
song_list_format = "$2{%a}|{%A}$8 $6-$8 $7%t$8"

song_status_format = "{$2%t $b$1- %a}|{%f}"
now_playing_prefix = "$b"
now_playing_suffix = "$/b"

header_visibility = "no"
autocenter_mode = "yes"
main_window_highlight_color = "white"
discard_colors_if_item_is_selected = "no"

# Progressbar look
progressbar_look = "━━━"
progressbar_elapsed_color = "cyan"
progressbar_boldness = "no"

# Visualizer
visualizer_in_stereo = "yes"
visualizer_sync_interval = "10"
visualizer_output_name = "Pipe"
visualizer_fifo_path = "/tmp/mpd.fifo"
visualizer_type = "ellipse"
visualizer_look = "●▍"
visualizer_color = "white,cyan,blue,green,yellow,red"

# Misc
display_bitrate = "yes"
enable_window_title = "no"

# cheat sheet
# %l - length
# %f - filename
# %D - directory
# %a - artist
# %t - title
# %b - album
# %y - year
# %n - track number (01/12 -> 01)
# %N - full track info (01/12 -> 01/12)
# %g - genre
# %c - composer
# %p - performer
# %d - disc
# %C - comment
# $R - begin right alignment
# colors
# $0 - default window color
# $1 - black
# $2 - red
# $3 - green
# $4 - yellow
# $5 - blue
# $6 - magenta
# $7 - cyan
# $8 - white
# $9 - end of current color
